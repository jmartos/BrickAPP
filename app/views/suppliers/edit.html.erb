<%= form_for @supplier do |f| %>
<%= render "error" %>
<div id="edit" class="col-md-12">
  <h3>Edit supplier</h3>
  <%= render "form", f: f %>
  <div class="col-md-4">
    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary" %><br>
    </div>
    <% end %>
    <%= link_to "Back", profile_path(tab: :suppliers)%>
  </div>
</div>
<div class="col-md-8"></div>
<div class="col-md-4">
  <div class="cancel">
    <h3>Delete supplier</h3>
    <p><%= button_to "Delete supplier", @supplier, data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
  </div>
</div>

