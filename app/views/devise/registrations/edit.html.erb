<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>

<div id="user-edit-normal" class="col-md-5">
  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-asterisk" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :address, autofocus: true, placeholder: "Address", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :zip_code, autofocus: true, placeholder: "code", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :city, autofocus: true, placeholder: "City", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-bookmark" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :state, autofocus: true, placeholder: "State", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-globe" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :country, autofocus: true, placeholder: "Country", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.number_field :phone_number_1, autofocus: true, placeholder: "Phone number 1", class: "form-control" %>

    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.number_field :phone_number_2, autofocus: true, placeholder: "Phone number 2", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-open-file" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.number_field :fax_number, autofocus: true, placeholder: "Fax number", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-link" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :web_page, autofocus: true, placeholder: "Web page", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-picture" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :image, autofocus: true, placeholder: "Image", class: "form-control" %>
    </div>
  </div><br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
</div>

<div id="user-edit-danger" class="col-md-5">
  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span></span>
    <div class="field">

     <%= f.password_field :password, autocomplete: "off", placeholder: "new password", class: "form-control" %>
   </div>
 </div><i>(leave blank if you don't want to change it)</i><br>

 <div class="input-group">
  <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span></span>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm new password", class: "form-control" %>
  </div>
</div><br>

<div class="input-group">
  <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span></span>
  <div class="field">
    <%= f.password_field :current_password, autocomplete: "off", placeholder: "current password", class: "form-control" %>
  </div>
</div><br>

<div class="actions">
  <%= f.submit "Update", class: "btn btn-primary" %>
</div>
<% end %>

<h3>Cancel my account</h3>

<p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Back", :back %>

</div>
