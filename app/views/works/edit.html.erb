<h2>Edit Work</h2>

<%= form_for @work do |f| %>
<%= devise_error_messages! %>

<div id="work-edit-normal" class="col-md-5">
  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :code, autofocus: true, placeholder: "Code", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-asterisk" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :address, autofocus: true, placeholder: "Address", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :zip_code, autofocus: true, placeholder: "code", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :city, autofocus: true, placeholder: "City", class: "form-control" %>
    </div>
  </div><br>
</div>

<div id="work-edit-normal" class="col-md-5">
  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-bookmark" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :state, autofocus: true, placeholder: "State", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-globe" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :country, autofocus: true, placeholder: "Country", class: "form-control" %>
    </div>
  </div><br>


  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.text_field :client, autofocus: true, placeholder: "Client", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.number_field :client_phone, autofocus: true, placeholder: "Client phone number", class: "form-control" %>
    </div>
  </div><br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
    <div class="field">
      <%= f.email_field :client_email, autofocus: true, placeholder: "Client_mail", class: "form-control" %>
    </div>
  </div><br>

</div>

<div class="actions">
  <%= f.submit "Edit", class: "btn btn-primary" %><br>
</div>
<% end %>

<%= link_to "Back", :back %>


